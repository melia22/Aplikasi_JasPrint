<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="#ffff">


        <LinearLayout
            android:id="@id/satu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbutua"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="left"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/homejp"/>


                <TextView
                    android:layout_marginLeft="120dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Profil"
                    android:textColor="#000"
                    android:textSize="29dp"
                    android:textStyle="bold"
                    android:typeface="sans"/>

        </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/avatar"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama      :Revi Melia"
        android:background="#cdcdcd"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat    :Rasau Jaya"
        android:background="#cdcdcd"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No HP     :081250113867"
        android:textColor="#000"
        android:background="#cdcdcd"
        android:textSize="15sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Email       :revimelia@student.untan.ac.id"
        android:background="#cdcdcd"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cdcdcd"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#000"
            android:text="Ubah Password"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:visibility="visible"
            android:background="#ffff"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Password Lama*:"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:background="#ffff"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Password Baru*:"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:background="#ffff"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Konfirmasi Password*:"/>

        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:background="#ffff"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Ubah Password"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textColor="#ffff"/>

    </LinearLayout>

    </LinearLayout>



