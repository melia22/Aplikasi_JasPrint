<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="#ffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAbumuda">

        <LinearLayout
            android:id="@id/satu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbutua">

            <TextView
                android:id="@+id/homepage"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="JasaPrint"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:paddingTop="5dp"/>

            <LinearLayout
                android:id="@+id/satu"
                android:gravity="center"
                android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAbutua"
                android:orientation="vertical">

                <Button
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="LOGOUT"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ffff"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/jp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:background="#ffff">

            <TextView
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="FITUR"
                android:textSize="25dp"
                android:textStyle="bold"
                android:paddingTop="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                     android:layout_gravity="center"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:background="@drawable/avatar"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="Profil"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/printer"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="Order"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/price"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="Price"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/history"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="History"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="#ffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/lampu"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:text="Tentang Aplikasi"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/komen"/>

                <Button
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:text="Masukkan"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/star"/>

                <Button
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:text="Beri Penilaian"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/tanya"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Bantuan"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>