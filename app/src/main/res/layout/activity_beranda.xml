<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaActivity"
    android:orientation="horizontal"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="#ffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/satu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbutua">

            <ImageButton
                android:id="@+id/id_home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/homejp"/>

            <LinearLayout
                android:id="@+id/satu"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAbutua"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="JasPrint"
                    android:textSize="29dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textColor="#000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="345dp"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/avatar"/>

            <Button
                android:id="@+id/profil"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@color/colorAbumuda"
                android:text="Profil"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="345dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/colorAbumuda">


        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/printer"/>

            <Button
                android:id="@+id/order"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@color/colorAbumuda"
                android:text="Order"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="345dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/colorAbumuda">


        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/price"/>

            <Button
                android:id="@+id/price"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@color/colorAbumuda"
                android:text="Price"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="345dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/colorAbumuda">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/history"/>

            <Button
                android:id="@+id/history"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:background="@color/colorAbumuda"
                android:text="History"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textColor="#000"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>





