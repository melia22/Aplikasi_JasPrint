<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="#ffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/satu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbutua">

            <Button
                android:id="@+id/homepage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/homejp"/>

            <LinearLayout
                android:id="@+id/satu"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAbutua"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="History"
                    android:textSize="29dp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textColor="#000"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/history"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorAbudasar"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text=" Satus Order"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="visible"
                android:background="@color/colorAbutua"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

            <CheckedTextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="Proses cetak"
                android:layout_marginLeft="15dp"
                android:layout_gravity="left"
                android:background="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="15sp" />

            <CheckedTextView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:text="Dalam Pengiriman"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <CheckedTextView
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="Selesai"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textSize="15sp" />

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbudasar">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Tugas Satu.doc        Rp.5000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbudasar">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Tugas Satu.doc        Rp.10000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAbudasar">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="15sp"
                android:textColor="#000"
                android:text="Tugas Satu.doc        Rp.12000"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>